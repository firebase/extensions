{
  "name": "delete-user-data-functions",
  "description": "Automatically delete a user's data when they delete their account.",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf lib",
    "compile": "tsc",
    "setup:emulator": "cd .. && firebase ext:dev:emulators:start --project=demo-project --test-params=test-params.env --test-config=./firebase.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:emulator": "firebase ext:dev:emulators:exec ./node_modules/.bin/jest --project=demo-project --test-params=../test-params.env --test-config=../firebase.json",
    "generate-readme": "firebase ext:info .. --markdown > ../README.md"
  },
  "author": "Lauren Long <longlauren@google.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "firebase-admin": "^9.11.1",
    "firebase-functions": "^3.15.4",
    "firebase-tools": "^9.16.5"
  },
  "devDependencies": {
    "jest": "^27.4.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.3.5"
  },
  "private": true
}
